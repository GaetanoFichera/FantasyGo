<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@color/FGcolorWhite">

    <FrameLayout
        android:id="@+id/fragment_container_modnearpve"
        android:layout_width="match_parent"
        android:layout_height="400dp"></FrameLayout>

    <RelativeLayout
        android:id="@+id/buttons_frame"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp">

        <Button
            android:id="@+id/back_button"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/background_button"
            android:drawableLeft="@mipmap/ic_indietro"
            android:text="@string/back_button_label"
            android:textColor="@color/FGcolorWhite"
            android:layout_marginRight="30dp"
            android:paddingRight="15dp"/>

        <Button
            android:drawableRight="@mipmap/ic_avanti"
            android:id="@+id/go_button"
            android:text="@string/go_button_label"
            android:textColor="@color/FGcolorWhite"
            android:background="@drawable/background_button"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/back_button"
            android:paddingLeft="15dp"/>
    </RelativeLayout>

</RelativeLayout>