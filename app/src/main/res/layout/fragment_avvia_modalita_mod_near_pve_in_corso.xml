<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/FGcolorWhite"
    tools:context="com.ficheralezzi.fantasygo.HomeActivity">

    <FrameLayout
        android:id="@+id/avanzamento_mod_near_pve_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_avanz_mod_near_pve"
        android:layout_centerHorizontal="true">
    </FrameLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/button_avvia_modNearPvE"
        android:id="@+id/button_avvia_modNearPvE"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/background_button_disabled"
        android:textColor="@color/FGcolorWhite"
        android:enabled="false"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
        <TextView
            android:id="@+id/dev_phase_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/FGcolorPrimary"
            android:text="Development Phase"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textAlignment="center"
            android:layout_below="@id/dev_phase_text"
            android:textColor="@color/FGcolorPrimary"
            android:text="Sviluppatori: \n Gaetano Fichera e Giovanni Lezzi"/>
    </RelativeLayout>
</RelativeLayout>